<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand">NewStore</a>
    <div class="d-flex align-items-center me-3">
        <span class="px-3  fw-medium">Don't have an account?</span>
        <button class="btn btn-outline-success" onclick="location.href='/signup'">Sign Up here!</button>
    </div>
  </div>
