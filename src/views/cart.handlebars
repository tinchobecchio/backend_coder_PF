<h2 class="text-center my-4">Cart</h2>
{{#if products}}
  <div class="container">
    <div class="row justify-content-center justify-content-lg-between g-4">
      <div class="col-12 col-lg-6">
        <ul class="list-group">
          {{#each products}}
            <li class="list-group-item p-1">
              <div class="container text-center">
                <div class="row my-2">
                  
                  <div class="col-xs-6 col-sm-4">
                    <img src={{this.id_prod.thumbnails}} alt="{{this.id_prod.description}}" class="img-thumbnail mt-1">
                  </div>

                  <div class="col d-flex flex-column justify-content-center">
                    <span class="fs-5 fw-semibold py-3 py-md-0">{{this.id_prod.title}}</span>
                    <span class="fs-6">{{this.id_prod.description}}</span>
                    <span class="fs-6 fw-lighter">Unitary Price: ${{this.id_prod.price}}</span>
                    <span class="fs-6 fw-lighter">Available: {{this.id_prod.stock}}</span>
                  </div>

                  <div class="col-xs-10 col-sm-3 text-center d-flex flex-column justify-content-evenly mb-3 mb-md-0">
                    <div class="my-3 my-md-0">
                      {{!-- <span class="fs-6 d-block">Quantity:</span> --}}
                      <span class="fs-5 fw-medium d-block"><span class="fs-6 fw-lighter">x</span> {{this.cant}}</span>
                    </div>
                    <div class="">
                      <button class="btn btn-primary" title="Edit quantity" onclick="editQuantity('{{this.cid}}','{{this.id_prod._id}}',{{this.cant}})">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><style>svg{fill:#ffffff}</style><path d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z"/></svg>
                      </button>
                      <button class="btn btn-danger" title="Remove product" onclick="deleteFromCart('{{this.cid}}','{{this.id_prod._id}}')">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><style>svg{fill:#ffffff}</style><path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/></svg>
                      </button>
                    </div>
                    
                  </div>
                </div>
              </div>
            </li>
          {{/each}}
        </ul>

      </div>
      <div class="col-10 col-lg-5 ">
        <div class="">
          <h3>Resume</h3>
          <hr>
          <ul class="list-group list-group-flush my-4">
            {{#each products}}
            <li class="list-group-item">
              <div class="hstack gap-3">
                <span><span class="badge bg-primary rounded-pill mx-1">{{this.cant}}</span> {{this.id_prod.title}}</span>
                <span class="ms-auto">${{this.sum}}</span>
              </div>
            </li>
            {{/each}}
          </ul>
          <hr>
          <h4 class="text-end">Total: ${{this.total}}</h4>
        </div>
        <div class="col-12 mt-5 text-center d-flex gap-2 justify-content-center">
          <button class="btn btn-success" onclick="purchaseCart('{{cid}}')">Checkout</button>
          <button class="btn btn-danger" onclick="resetCart('{{cid}}')">Reset cart</button>
        </div>
      </div>
    </div>
  </div>
  {{else}}
    <div class="container text-center mt-5">
      <h5>Nothing here...</h5>
      <button class="btn btn-primary mt-5" onclick="location.href='/products'">Go to Products</button>
    </div>
  {{/if}}



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="js/cart.js"></script>